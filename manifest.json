{
  "manifest_version": 2,

  "name": "FoPo - Fear Of Piccing Out!",
  "description": "Get notifications when new pics are posted for your favourite tag - or a random one which you may have never seen before",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "alarms",
    "notifications",
    "http://piccing.com:8080/img/*"
  ]
}